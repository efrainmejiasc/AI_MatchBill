@{
    ViewData["Title"] = "Home Page";
}

<h2>Welcome to Home Page</h2>
<p>This is the main page of the application.</p>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Subir Facturas</title>
    <!-- Incluir Bootstrap o cualquier otro CSS según tus necesidades -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h2>Subir Facturas</h2>
        <form id="uploadForm" enctype="multipart/form-data">
            <div class="form-group">
                <label for="files">Bills Select:</label>
                <input type="file" id="files" name="files" multiple class="form-control" />
            </div>
            <button type="button" id="uploadButton" class="btn btn-primary">Subir</button>
        </form>
        <div id="result" class="mt-3"></div>
    </div>

    <script>
        $(document).ready(function() {
            $('#uploadButton').click(function() {
                var formData = new FormData($('#uploadForm')[0]);

                $.ajax({
                    url: '/Home/Upload',
                    type: 'POST',
                    data: formData,
                    contentType: false,
                    processData: false,
                    success: function(response) {
                        console.log(response);
                        if (response.estatus) {
                            $('#result').html('<div class="alert alert-success">Archivos subidos con éxito.</div>');
                        } else {
                            $('#result').html('<div class="alert alert-danger">Error al subir los archivos.</div>');
                        }
                    },
                    error: function() {
                        $('#result').html('<div class="alert alert-danger">Error en la solicitud AJAX.</div>');
                    }
                });
            });
        });
    </script>
</body>
</html>

